<Window x:Class="visualiser_conways.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:visualiser_conways.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
            <Button Content="Play" Command="{Binding PlayCommand}" Margin="5"/>
            <Button Content="Stop" Command="{Binding StopCommand}" Margin="5"/>
            <Label Content="Delay:" Margin="5"/>
            <TextBox Text="{Binding Mode=TwoWay, Path=DelayTime}" Width="50" Margin="5"/>
            <Button Content="Select folder" Command="{Binding SelectFolder}" Margin="5"/>
            <Label Content="{Binding InputFolder}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
